#!/usr/bin/env sh

# NOTE:
# This file is provided as a starting point for system specific shell settings

# enable bash completion

. ~/.bash/bundle/bash-completion/bash_completion

# enable automatic caching for certain bash completion scripts upon load

export _wmic_auto_init_cache=1
export _cleartool_auto_init_cache=1

# X settings

export DISPLAY=:0

# set paths 

if [ -z "$_PATH_SET" ]; then

    # visual studio dev utils

    PATH="${PATH}$(find /cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Help\ Viewer/ -maxdepth 2 -type f -name HlpViewer.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Visual\ Studio*/Common7/IDE -maxdepth 1 -type f -name devenv.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Program\ Files\ \(x86\)/Microsoft\ Visual\ Studio*/VC/bin -maxdepth 1 -type f -name cl.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Program\ Files\ \(x86\)/MSBuild/*/Bin -maxdepth 1 -type f -name MSBuild.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Windows/Microsoft.NET/Framework/* -maxdepth 1 -type f -name MSBuild.exe -printf :%h 2> /dev/null)"

    # ida

    PATH="${PATH}$(find /cygdrive/c/Program\ Files\ \(x86\)/IDA\ * -maxdepth 0 -type d -printf :%h/%f 2> /dev/null)"

    # bit-utils

    if [ -d "${HOME}/.bash/bundle/bit-utils" ]; then
        PATH="${PATH}:${HOME}/.bash/bundle/bit-utils"
    fi

fi

export _PATH_SET=true

# set MANPATH so it includes users' private man if it exists

if [ -d "${HOME}/man" ]; then
    MANPATH="${HOME}/man:${MANPATH}"
fi

# set INFOPATH so it includes users' private info if it exists

if [ -d "${HOME}/info" ]; then
    INFOPATH="${HOME}/info:${INFOPATH}"
fi

