#!/usr/bin/env sh

# NOTE:
# This file is provided as a starting point for system specific shell settings

# enable bash completion

. ~/.bash/bundle/bash-completion/bash_completion

# enable automatic caching for certain bash completion scripts upon load

export _wmic_auto_init_cache=1
export _cleartool_auto_init_cache=1

# X settings

export DISPLAY=:0

# set paths 

if [ -z "$_PATH_SET" ]; then

    # help viewer

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Microsoft\ Help\ Viewer/ -maxdepth 2 -type f -name HlpViewer.exe -printf :%h 2> /dev/null)"

    # visual studio dev utils

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Microsoft\ Visual\ Studio*/Common7/IDE -maxdepth 1 -type f -name devenv.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Microsoft\ Visual\ Studio*/VC/bin -maxdepth 1 -type f -name cl.exe -printf :%h 2> /dev/null)"

    # windows debugging tools

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Windows\ Kits/*/Debuggers/* -maxdepth 1 -type f -name windbg.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Windows\ Kits/*/bin/* -maxdepth 1 -type f -name wsddebug_client.exe -printf :%h 2> /dev/null)"

    # visual studio performance tools

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Microsoft\ Visual\ Studio*/Team\ Tools/Performance\ Tools -maxdepth 2 -type f -name vsinstr.exe -printf :%h 2> /dev/null)"

    # sysinternals

    PATH="${PATH}$(find /cygdrive/c -mindepth 2 -maxdepth 2 -type f -name PsExec.exe -printf :%h 2> /dev/null)"

    # msbuild

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/MSBuild/*/Bin -maxdepth 1 -type f -name MSBuild.exe -printf :%h 2> /dev/null)"
    PATH="${PATH}$(find /cygdrive/c/Windows/Microsoft.NET/Framework/* -maxdepth 1 -type f -name MSBuild.exe -printf :%h 2> /dev/null)"

    # ida

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/IDA* -maxdepth 1 -type f -name idaq.exe -printf :%h 2> /dev/null)"

    # java

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Java/*/bin -maxdepth 1 -type f -name java.exe -printf :%h 2> /dev/null)"

    # coverity

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Coverity/Coverity\ Static\ Analysis/bin -maxdepth 1 -type f -name cov-build.exe -printf :%h 2> /dev/null)"

    # cmake

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Cmake*/bin -maxdepth 1 -type f -name cmake.exe -printf :%h 2> /dev/null)"

    # ccollab

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Collaborator\ Client -maxdepth 1 -type f -name ccollab.exe -printf :%h 2> /dev/null)"

    # dr. memory

    PATH="${PATH}$(find /cygdrive/c/Program\ Files*/Dr\.\ Memory/bin -maxdepth 1 -type f -name drmemory.exe -printf :%h 2> /dev/null)"

    # bit-utils

    if [ -d "${HOME}/.bash/bundle/bit-utils" ]; then
        PATH="${PATH}:${HOME}/.bash/bundle/bit-utils"
    fi

    # aliases / functions

    PATH="${PATH}:${HOME}/.bash/scripts"

fi

export _PATH_SET=true

# set MANPATH so it includes users' private man if it exists

if [ -d "${HOME}/man" ]; then
    MANPATH="${HOME}/man:${MANPATH}"
fi

# set INFOPATH so it includes users' private info if it exists

if [ -d "${HOME}/info" ]; then
    INFOPATH="${HOME}/info:${INFOPATH}"
fi

