# variables
altscreen on
autodetach on
caption always "%?%F%{= gk}%:%{= KW}%?%2n%f%07=%t"
compacthist on
deflogin on
defscrollback 10000
hardstatus alwayslastline "%{= .y}(%H) %{-}%L=%-w%40L>%{=bu rW}%n %t%{-}%+w %-10<%="
ignorecase on
msgminwait 0
msgwait 2
multiuser off
shell "bash"
shelltitle "$ |bash"
startup_message off
vbell on

# vim-like window bindings
bind + resize +5
bind - resize -5
bind = resize =
bind h focus left
bind j focus down
bind k focus up
bind l focus right
bind o only
bind q remove
bind s split
bind v split -v

# vim-like copy mode bindings
markkeys y=V:' '=v:x=o:' '=y
bindkey -m  stuff coCo
bindkey -m  stuff Coco
bindkey -m B stuff BBw
bindkey -m E stuff lEh
bindkey -m W stuff Ew
bindkey -m gE stuff EwBBh
bindkey -m ge stuff lbbhe
bindkey -m yy stuff 0Y

# load local settings
source ~/.screenrc_local
