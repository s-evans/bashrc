[alias]
    st = status
    ci = commit
    cm = commit -m
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    dog = log --decorate --oneline --graph
    adog = log --all --decorate --oneline --graph
    ls = ls-files
    ign = status --ignored
    root = rev-parse --show-toplevel
[core]
    excludesFile = ~/.gitignore_global
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    renames = copies
    noprefix = true
[push]
    default = simple
[rerere]
    autoUpdate = true
    enabled = true
[branch]
    autoSetupMerge = true
; vim: ft=gitconfig
