[alias]
    adog = log --decorate --oneline --graph --all
    ai   = add --interactive
    ap   = add --patch
    ba   = branch --all
    bc   = branch --contains
    bi   = bisect
    bib  = bisect bad
    big  = bisect good
    bis  = bisect start
    br   = branch
    ci   = commit
    cm   = commit -m
    co   = checkout
    cp   = cherry-pick
    dc   = diff --no-prefix --cached
    df   = diff --no-prefix
    dog  = log --decorate --oneline --graph
    dt   = difftool
    dtc  = difftool --cached
    dty  = difftool -y
    fb   = filter-branch
    fs   = fsck
    fsu  = fsck --unreachable --no-reflog
    lp   = log -p
    ls   = !git --no-pager ls-files
    lsb  = !git --no-pager rev-parse --abbrev-ref HEAD
    lsc  = !git --no-pager diff --name-only --cached
    lscr = !git --no-pager diff --name-only --cached --relative
    lsd  = !git --no-pager ls-files --deleted
    lsi  = !git --no-pager ls-files --others --ignored --exclude-standard
    lsm  = !git --no-pager ls-files --modified
    lso  = !git --no-pager ls-files --others --exclude-standard
    lsr  = !git --no-pager rev-parse --show-toplevel
    mt   = mergetool
    mty  = mergetool -y
    pl   = pull
    plo  = pull origin
    ps   = push
    pso  = push origin
    re   = remote
    rev  = remote -v
    rl   = reflog
    root = !git --no-pager rev-parse --show-toplevel
    rp   = rev-parse
    rv   = revert
    sm   = submodule
    smu  = submodule update
    smui = submodule update --init
    smuir = submodule update --init --recursive
    st   = status
    ui   = update-index
    uiau = update-index --assume-unchanged
    uinau = update-index --no-assume-unchanged
[core]
    excludesFile = ~/.gitignore_global
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    renames = copies
    noprefix = true
[push]
    default = simple
[rerere]
    autoUpdate = true
    enabled = true
[branch]
    autoSetupMerge = true
; vim: ft=gitconfig
