[alias]
    adog = log --decorate --oneline --graph --all
    ba   = branch --all
    bc   = branch --contains
    br   = branch
    ci   = commit
    cm   = commit -m
    co   = checkout
    dc   = diff --no-prefix --cached
    df   = diff --no-prefix
    dog  = log --decorate --oneline --graph
    dt   = difftool
    dtc  = difftool --cached
    dty  = difftool -y
    fb   = filter-branch
    lp   = log -p
    ls   = !git --no-pager ls-files
    lsb  = !git --no-pager rev-parse --abbrev-ref HEAD
    lsc  = !git --no-pager diff --name-only --cached
    lscr = !git --no-pager diff --name-only --cached --relative
    lsd  = !git --no-pager ls-files --deleted
    lsi  = !git --no-pager ls-files --others --ignored --exclude-standard
    lsm  = !git --no-pager ls-files --modified
    lso  = !git --no-pager ls-files --others --exclude-standard
    lsr  = !git --no-pager rev-parse --show-toplevel
    mt   = mergetool
    mty  = mergetool -y
    pl   = pull
    plo  = pull origin
    ps   = push
    pso  = push origin
    re   = remote
    rev  = remote -v
    root = !git --no-pager rev-parse --show-toplevel
    sm   = submodule
    smu  = submodule update
    smui = submodule update --init
    st   = status
[core]
    excludesFile = ~/.gitignore_global
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    renames = copies
    noprefix = true
[push]
    default = simple
[rerere]
    autoUpdate = true
    enabled = true
[branch]
    autoSetupMerge = true
; vim: ft=gitconfig
